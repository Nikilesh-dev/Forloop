<Window x:Class="For_loop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:For_loop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="BurlyWood">
    <ScrollViewer>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition  Height="4*"></RowDefinition>
            <RowDefinition></RowDefinition>
           
        </Grid.RowDefinitions>
        <Label Content="" Grid.Row="0" Grid.Column="0" x:Name="lbltxt" HorizontalContentAlignment="Center" FontSize="30" FontWeight="Medium" VerticalContentAlignment="Center"></Label>
        <Button Content="Show" Grid.Row="1" Grid.Column="0" Width="200" Height="51"  Click="Button_Click"></Button>
    </Grid>
    </ScrollViewer>
</Window>
